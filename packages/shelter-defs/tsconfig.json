{
  "include": ["rootdefs.ts", "../*/*.d.ts", "../shelter/src/**/*", "../shelter-ui/src/**/*", "../../globals.d.ts"],
  "compilerOptions": {
    "rootDir": "..",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "composite": true
  }
}
