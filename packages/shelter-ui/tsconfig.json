{
  "include": ["./src/**/*", "../../globals.d.ts"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "outDir": "dist",
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "strictFunctionTypes": true,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "composite": true
  }
}
